@{
    ViewData["Title"] = "Delete Movie";
}
@model MoviesResponse

<h2 class="text-center">Confirm Deletion</h2>
<h3 class="text-center">Are you sure you want to delete the record for @Model.Title?</h3>

<div class="text-center">
    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit" class="btn btn-outline-dark">Delete</button>
        <a asp-controller="Home" asp-action="MovieList" class="btn btn-outline-dark">Cancel</a>
        <input type="hidden" asp-for="MovieId" />
    </form>
</div>
