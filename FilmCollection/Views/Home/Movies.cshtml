@{ 
    ViewData["Title"] = "Movies";
}

@model MoviesResponse


<div class="text-center">
    <h1 class="display-4">Movies</h1>
    <p>Fill out our form!</p>

    <div class="container-fluid">
        <div class="text-left">
            <form method="post">
                <label asp-for="CategoryId">Category:</label>
                <select asp-for="CategoryId">
                    <option value="">Select a Category</option>
                        @foreach (Category c in ViewBag.CategoriesX)
                            {
                                <option value="@c.CategoryId">@c.CategoryName</option>
                            }
                </select>
                <br />

                <label asp-for="Title">Title:</label>
                <input asp-for="Title" />
                <br />

                <input asp-for="MovieId" type="hidden"/>

                <label asp-for="Year">Year:</label>
                <input asp-for="Year" />
                <br />

                <label asp-for="Director">Director:</label>
                <input asp-for="Director" />
                <br />

                <label for="rating" asp-for="Rating">Rating:</label>
                <select name="rating" asp-for="Rating">
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG13">PG-13</option>
                    <option value="R">R</option>
                </select>
                <br />

                <label for="edited" asp-for="Edited">Edited:</label>
                <select name="edited" asp-for="Edited">
                    <option value="True">Yes</option>
                    <option value="False">No</option>
                </select>
                <br />

                <label asp-for="LentTo">Lent To:</label>
                <input asp-for="LentTo" />
                <br />

                <label asp-for="Notes">Notes:</label>
                <input asp-for="Notes" />
                <br />

                <button type="submit" class="btn-dark btn">Submit</button>
                <br />

                <div asp-validation-summary="All"></div>

            </form>
        </div>
    </div>
</div>